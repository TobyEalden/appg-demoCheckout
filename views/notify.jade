extends layout

block content
  h1 Submit a payment #{action === "notify" ? "notification" : "request"}
  form(method="post")
    table
      tr
        th target
        td
          select(name="target")
            option toby.ealden@gmail.com
            option nick@nquiringminds.com
      tr
        th origin
        td
          select(name="origin")
            option PayPal
            option WorldPay
      tr
        th source
        td
          select(name="source")
            option Mastercard
            option Visa Credit
            option Visa Debit
      tr
        th destination
        td
          select(name="destination")
            option Amazon
            option Ebay
            option BT
            option E-on
      tr
        th description
        td
          input(name="description",type="text")
      tr
        th value
        td
          input(name="value",type="text")
      tr
        th
        td(style="text-align:right;")
          input(type="submit", value="Submit")